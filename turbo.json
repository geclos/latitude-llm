{
  "globalEnv": [
    "NODE_ENV",
    "BUILDING_CONTAINER",
    "LATITUDE_API_KEY",
    "DATABASE_URL",
    "ELASTIC_URL",
    "ELASTIC_USERNAME",
    "ELASTIC_PASSWORD",
    "REDIS_HOST",
    "REDIS_PORT",
    "REDIS_PASSWORD",
    "USE_LOCALHOST",
    "GATEWAY_PORT",
    "GATEWAY_HOSTNAME"
  ],
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": { "dependsOn": ["^lint"] },
    "tc": { "dependsOn": ["^tc"] },
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
