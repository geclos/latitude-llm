{
  "extends": "@latitude-data/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@latitude-data/typescript-config/types"
    ],
    "baseUrl": "./",
    "paths": {
      "$compiler/*": ["src/*"],
      "acorn": ["node_modules/@latitude-data/typescript-config/types/acorn"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
