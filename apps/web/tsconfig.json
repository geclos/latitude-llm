{
  "extends": "@latitude-data/typescript-config/base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "$/*": ["./src/*"],
      "$core/*": ["../../packages/core/src/*"],
      "$jobs/*": ["../../packages/jobs/src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
