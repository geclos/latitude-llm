{
  "extends": "@latitude-data/typescript-config/base.json",
  "compilerOptions": {
    "plugins": [{"name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "$/*": ["./src/*"],
      "$db/*": ["../../packages/database/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
